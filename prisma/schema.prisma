generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CarListings {
    id              String  @id @default(uuid())
    ownerId         String
    make            String
    model           String
    year            Int
    price           Int
    imageUrl        String
    seats           Int
    city            String
    miles           Int
    features        String[]
    description     String
    messages        Messages[]
}

model Messages {
    id            String  @id @default(uuid())
    name          String
    email         String
    phone         String
    message       String
    carListing    CarListings  @relation(fields: [listingId], references: [id], onDelete: Cascade)
    listingId     String
}